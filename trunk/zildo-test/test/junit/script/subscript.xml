<adventure>
	<scene id='caller'>
 		<var name='state' value='1'/>
		<exec script='doStuff'/>
		<if exp='state=2'>
			<var name='state' value='3'/>
		</if>
	</scene>

	<scene id='doStuff'>
		<wait value='10'/>
		<if exp='state=1'>
		    <var name='state' value='2'/>
		</if>
	</scene>
</adventure>